	Definir c Como Entero;
	Escribir "Ingrese un numero";
	Leer c;
		Mientras c>0 Hacer
		c<-c-1;
		Limpiar Pantalla;
		Escribir "Cuenta regresiva ",c;
		Esperar 1 Segundo;
	FinMientras
FinAlgoritmo
